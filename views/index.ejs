<!DOCTYPE html>
<html>

<head>
  <!-- bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
  <!-- fontawesome -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css"
    integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>

  <!---------------------- NAV ---------------------->

  <%- include('nav'); %>

  <!---------------------- SIGN IN AREA ---------------------->
  <div class="home">
    <div class="row mt-5 d-flex justify-content-center mx-1">

      <div class="col-12 col-sm-4 text-center">

        <div class="formArea">
          <h4 class="titleForm"><span>Sign-In</span></h4>

          <form action="/users/sign-in" method="POST">
            <div class="form-group mt-4">
              <label></label>
              <input name="emailFromFront" type="text" class="form-control" placeholder="Email">
            </div>
            <div class="form-group">
              <label></label>
              <input name="passwordFromFront" type="password" class="form-control"
                placeholder="Password">
            </div>


            <button type="submit" class="btn btn-danger mt-3 mb-5">Confirm</button>
          </form>
        </div>

      </div>

      <!---------------------- SIGN UP AREA ---------------------->
      <div class="col-12 col-sm-4 text-center mx-1">

        <div class="formArea">

          <h4 class="titleForm"><span>Sign-Up</span></h4>

          <form action="/users/sign-up" method="POST">
            <div class="form-group mt-4">
              <label></label>
              <input name="lastNameFromFront" type="text" class="form-control"
                placeholder="Last Name">
            </div>
            <div class="form-group">
              <label></label>
              <input name="firstNameFromFront" type="text" class="form-control" placeholder="First Name">
            </div>
            <div class="form-group">
              <label></label>
              <input name="emailFromFront" type="text" class="form-control" placeholder="Email">
            </div>
            <div class="form-group">
              <label></label>
              <input name="passwordFromFront" type="password" class="form-control" placeholder="Password">
            </div>

            <!-- <p>< % = userIncorrect %></p> -->

            <button type="submit" class="btn btn-danger mt-3">Confirm</button>
          </form>

        </div>

      </div>

      <!---------------------- Footer ---------------------->

      <%- include('footer'); %>  


    </div>
  </div>

  </div>
  </div>
</body>

</html>